# Frontend Environment Variables for Development  
# For Netlify Functions (production): https://your-site.netlify.app/.netlify/functions
# For local development: http://localhost:8888/.netlify/functions (using netlify dev)
VITE_API_URL=http://localhost:8888/.netlify/functions
VITE_WS_URL=ws://localhost:3001
VITE_AVATAR_ENABLED=true
VITE_AUDIO_ONLY_FALLBACK=true
VITE_ENABLE_ANALYTICS=false
VITE_LOG_LEVEL=debug

# Feature Flags
VITE_ENABLE_MOCK_AVATAR=true
VITE_ENABLE_DEMO_MODE=false
VITE_ENABLE_TELEMETRY=false

# App Configuration
VITE_APP_NAME="AI Interviewer"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="Full-Realism Human-AI Interviewer"

# WebRTC Configuration
VITE_WEBRTC_STUN_SERVERS="stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302"

# For production, these will be overridden by Netlify environment variables