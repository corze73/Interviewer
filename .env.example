# Core Application
NODE_ENV=development
PORT=3000
HOST=localhost

# Database - Neon PostgreSQL
DATABASE_URL=postgresql://username:password@hostname.neon.tech/database_name?sslmode=require
# Note: Get your actual connection string from Neon dashboard > Connect
# Redis (optional - can use Upstash Redis for production)
REDIS_URL=redis://localhost:6379

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
CORS_ORIGIN=http://localhost:3000

# AI Services - LLM
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Avatar Provider (choose one)
# HeyGen
HEYGEN_API_KEY=your-heygen-api-key
HEYGEN_AVATAR_ID=your-avatar-id
HEYGEN_VOICE_ID=your-voice-id

# D-ID Alternative
# DID_API_KEY=your-did-api-key
# DID_PRESENTER_ID=your-presenter-id

# Speech Services
# Azure Cognitive Services
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=eastus
AZURE_SPEECH_LANGUAGE=en-US

# Google Cloud Speech (alternative)
# GOOGLE_CLOUD_PROJECT_ID=your-project-id
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# WebRTC Configuration
WEBRTC_STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302
WEBRTC_TURN_SERVER=turn:your-turn-server.com:3478
WEBRTC_TURN_USERNAME=your-turn-username
WEBRTC_TURN_CREDENTIAL=your-turn-password

# File Storage
# Local Development
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# AWS S3 (production)
# STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_BUCKET_NAME=interviewer-storage

# Feature Flags
AVATAR_ENABLED=true
AUDIO_ONLY_FALLBACK=true
VERBOSE_LOGGING=false
ENABLE_METRICS=true
ENABLE_TELEMETRY=true

# Performance & Scaling
MAX_CONCURRENT_SESSIONS=50
SESSION_TIMEOUT_MINUTES=30
MEDIA_STREAM_TIMEOUT_SECONDS=60
STT_CHUNK_SIZE=4096

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring & Observability
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Development Tools
ENABLE_CORS=true
ENABLE_SWAGGER=true
ENABLE_PLAYGROUND=true

# Testing
TEST_DATABASE_URL=postgresql://interviewer:password@localhost:5432/interviewer_test
TEST_TIMEOUT=30000